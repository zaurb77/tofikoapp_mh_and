<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bacjground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".activity.SetPasswordActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backSetPassword"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/back"
                    android:tint="@color/colorLightGreen" />

                <com.angaihouse.controls.CTextView
                    android:id="@+id/setPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:textColor="@color/colorLightGreen"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:orientation="vertical">


                <com.angaihouse.controls.CEditText
                    android:id="@+id/newPasswordChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/round_green_border"
                    android:inputType="textPassword"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/colorLightGreen"
                    android:textColorHint="@color/colorLightGreen"
                    android:textCursorDrawable="@drawable/cursor_shap"
                    android:textSize="@dimen/_13sdp" />


                <com.angaihouse.controls.CEditText
                    android:id="@+id/confirmPasswordChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/round_green_border"
                    android:inputType="textPassword"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/colorLightGreen"
                    android:textColorHint="@color/colorLightGreen"
                    android:textCursorDrawable="@drawable/cursor_shap"
                    android:textSize="@dimen/_13sdp" />


            </LinearLayout>


            <com.angaihouse.controls.CTextView
                android:id="@+id/saveSetPassword"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/round_green_border"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:textColor="@color/colorLightGreen"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>
    </FrameLayout>
</layout>
