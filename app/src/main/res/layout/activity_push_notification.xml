<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.PushNotificationActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp"
            android:background="@color/colorLightGreen"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/back"
                android:tint="@color/white" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_23sdp"
                android:tint="@color/white"
                android:layout_weight="1"
                android:src="@drawable/logo_mangalhouse" />

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/back"
                android:tint="@color/white"
                android:visibility="invisible"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".activity.SignUpActivity">

                <com.angaihouse.controls.CTextView
                    android:id="@+id/orderNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:id="@+id/llPushNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_6sdp">


                    <com.angaihouse.controls.CTextView
                        android:id="@+id/tvPush"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:textColor="@color/colorLightGreen"
                        android:textSize="@dimen/_12sdp" />


                    <com.suke.widget.SwitchButton
                        android:id="@+id/switchOrderPushNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_22sdp"
                        app:sb_checked_color="@color/colorLightGreen"
                        app:sb_background="@color/white"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@color/grey" />


                <LinearLayout
                    android:id="@+id/llEmailNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_6sdp">


                    <com.angaihouse.controls.CTextView
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:textColor="@color/colorLightGreen"
                        android:textSize="@dimen/_12sdp" />


                    <com.suke.widget.SwitchButton
                        android:id="@+id/switchEmailOrderPushNotification"
                        android:layout_width="wrap_content"
                        app:sb_checked_color="@color/colorLightGreen"
                        app:sb_background="@color/white"
                        android:layout_height="@dimen/_22sdp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@color/grey" />


                <com.angaihouse.controls.CTextView
                    android:id="@+id/newsAndOffer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:id="@+id/llNewsPushNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_6sdp">


                    <com.angaihouse.controls.CTextView
                        android:id="@+id/tvPUSH"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:textColor="@color/colorLightGreen"
                        android:textSize="@dimen/_12sdp" />


                    <com.suke.widget.SwitchButton
                        android:id="@+id/switchNewsPushNotification"
                        android:layout_width="wrap_content"
                        app:sb_background="@color/white"
                        app:sb_checked_color="@color/colorLightGreen"
                        android:layout_height="@dimen/_22sdp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@color/grey" />


                <LinearLayout
                    android:id="@+id/llNewsEmailNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_6sdp">


                    <com.angaihouse.controls.CTextView
                        android:id="@+id/EMAIL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:textColor="@color/colorLightGreen"
                        android:textSize="@dimen/_12sdp" />


                    <com.suke.widget.SwitchButton
                        android:id="@+id/switchNewsEmailNotification"
                        android:layout_width="wrap_content"
                        app:sb_background="@color/white"
                        app:sb_checked_color="@color/colorLightGreen"
                        android:layout_height="@dimen/_22sdp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@color/grey" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>