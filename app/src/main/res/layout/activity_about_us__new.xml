                    android:textSize="@dimen/_10sdp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"
                    android:background="#bc9952" />


                <ImageView
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/formaggi" />

                <com.angaihouse.controls.CTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Sapori gourmet"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <com.angaihouse.controls.CTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="formaggi slow food"
                    android:textColor="#bc9952"
                    android:textSize="@dimen/_12sdp" />


                <com.angaihouse.controls.CTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Per le nostre ricette scegliamo formaggi che siano locali, provenienti da mucche nutrite con foraggi coltivati all'interno delle aziende agricole; sostenibili perché prediligiamo chi utilizza concimi naturali per i campi nei quali pascolano; buoni, perché ci piacciono le cose tipiche, gustose, dallo spirito slow food."
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"
                    android:background="#bc9952" />


                <ImageView
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/bevande" />

                <com.angaihouse.controls.CTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Very importand drinks"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <com.angaihouse.controls.CTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="bevande premium"
                    android:textColor="#bc9952"
                    android:textSize="@dimen/_12sdp" />


                <com.angaihouse.controls.CTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Abbiamo pensato di abbinare ai nostri piatti eccellenze del territorio piemontese, per esaltare i sapori e offrire un'esperienza completa al vostro palato.\nPer questo le nostre birre e i nostri vini sono stati scelti con cura tra specialità premiate, prestigiose, che parlano ad ogni sorso della passione per le cose buone che accomuna noi e i nostri preziosi clienti"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"
                    android:background="#bc9952" />


                <ImageView
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ambiente" />

                <com.angaihouse.controls.CTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Rispetto per l'ambiente"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <com.angaihouse.controls.CTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Eco friendly"
                    android:textColor="#bc9952"
                    android:textSize="@dimen/_12sdp" />


                <com.angaihouse.controls.CTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Abbiamo scelto materie prime che nascono da politiche di produzione rispettose per la terra e gli animali, così possiamo offrire sempre un prodotto genuino e sostenibile.\nAnche gli incarti e gli imballaggi utilizzati per i nostri prodotti sono eco-compatibili, biodegradabili e compostabili"
