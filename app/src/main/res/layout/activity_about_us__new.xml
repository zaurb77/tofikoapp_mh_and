                    android:textSize="@dimen/_12sdp" />


                <com.angaihouse.controls.CTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Le salse sono il fiore all'occhiello dei nostri piatti, perché sono buone e genuine: Maionese, guacamole, salsa BBQ, salsa Mangal e tutte le altre salse sono preparate ogni giorno direttamente da noi con materie prime fresche e naturali.\nProva la differenza!"
